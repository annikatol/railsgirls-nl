<h1>Resource</h1>

<br />
  <table>
    <thead>
    	<tr>
    		<th>Name</th>
    		<th>Description</th>
    		<th>URL</th>
    	</tr>
    </thead>
    <tbody>   	
    	  <tr onclick="location.href='<%= edit_resource_path(@resource) %>'">
    	  	<td><%= @resource.title %></td>
    	  	<td><%= @resource.description %></td>
    	  	<td><%= link_to("Go", @resource.url, :target => "_blank") %></td>
    	  </tr>
    </tbody>
  </table>
        <% @resource.comments.each do |comment| %>
          <tr>
            <td><%= comment.name %></td>
            <td><%= comment.comment %></td>
            <td><%= time_ago_in_words comment.created_at %> ago</td>
          </tr>
        <% end %>